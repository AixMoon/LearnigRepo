    "version": "0.2.0",
    "configurations": [
        
        { 
            "name": "Attach C++",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/temp/${fileBasenameNoExtension}.out",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },


        {
            "preLaunchTask": "build c++",
            "name": "Launch C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/temp/${fileBasenameNoExtension}.out",
            "args": [
                "-g"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",

        }
    ]
}